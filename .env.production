# Django Security Settings for Production
# IMPORTANT: Change all values before deploying!

# Secret Key - MUST be changed to a strong random value
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-change-this-immediately-in-production

# Debug mode - MUST be False in production
DEBUG=False

# Allowed Hosts - Add your production domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com,www.seu-dominio.com

# Database URL - Configure your production database
# SQLite example: sqlite:///db.sqlite3
# PostgreSQL example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings - Only allow your frontend origin
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://seu-dominio.com,https://www.seu-dominio.com

# CSRF Settings - Add trusted origins for form submissions
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://seu-dominio.com,https://www.seu-dominio.com

# Email Configuration (if needed)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Security Headers (Production only)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
